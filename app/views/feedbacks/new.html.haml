.section
  .container
    %br
    %br
    %h1.title.highlight=@event.title if @event.title
    %blockquote
      %p.lead=@event.dates

    %h2 Feedback

    = simple_form_for [@event, Feedback.new] do |f|
      .row
        .col-md-8
          .span5
            = f.input :email_address, input_html: { class: 'span4' }, hint: "Please use the same email address you used when signing up for the workshop", required: true
          .span5
            .well= f.input :permission, input_html: { class: 'inline span10', rows: 5 }, label: "Can we use your feedback and comments on our website? Tick the box if we can. "
      %br
      %br
      .row
        .col-md-8
          .span8
            = f.input :application_description, as: :text, input_html: { class: 'span8', rows: 5 }
          .span8
            = f.input :application_url, input_html: { class: 'span8' }
            = f.input :github_url, input_html: { class: 'span8' }
      %hr
      .row
        .col-md-8
          .span8
            = f.input :feelings_before, as: :text, input_html: { class: 'span8', rows: 4 }, label: "How did you feel before the workshop?"
          .span8
            = f.input :feelings_after, as: :text, input_html: { class: 'span8', rows: 4 }, label: "How did you feel after the workshop?"

      .row
        .col-md-12
          .span12
            = f.input :comments, as: :text, input_html: { class: 'span12', rows: 5 }

      .row
        .col-md-12
          .span12
            = f.input :rating, input_html: { class: 'span2'}, label: "How would you rate our workshop?", :collection => [["Not that great", 1], ["Meh", 2 ], ["Good", 3], [ "Very good", 4 ], ["Awesome!", 5]], required: true, prompt: "Select rating"

      %hr
      .form-actions
        = f.submit :Submit, class: 'btn btn-large btn-primary'
