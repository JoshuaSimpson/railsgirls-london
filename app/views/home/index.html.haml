%section#home_events
  .lead Upcoming Events
  %ul.cities
    - @cities.each do |city|
      %li
        %h3
          = link_to city.name, city_path(city)
        .citybox
          %blockquote
            %p.lead
              4-5 october 2013
          =link_to image_tag("city.jpg"), city_path(city)
          .details
            .applications
              Applications are open.
            .mini
              .links
                = link_to "View details and apply", city_path(city)
      


