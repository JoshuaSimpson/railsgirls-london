%h2== Register for Rails Girls #{@city.name}
%hr
.row
  = simple_form_for @registration, url: city_registrations_path(@city), html: { class: 'form-horizontal' } do |f|
    = f.input :first_name, input_html: {class: "span4"}
    = f.input :last_name, input_html: {class: "span4"}
    = f.input :email, input_html: {class: "span4"}
    = f.input :phone_number, input_html: {class: "span4"}
    = f.input :twitter, input_html: {class: "span4"}
    = f.input :gender, input_html: {class: "span4"}
    = f.input :programming_experience, input_html: {rows: 3, class: "span5"}
    = f.input :reason_for_applying, input_html: {rows: 3, class: "span5"}

    .form-actions
      = f.submit "Register", class: "btn btn-large"
